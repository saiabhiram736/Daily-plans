mkdir -p ~/linux_project_gottam && cd ~/linux_project_gottam && \
echo -e "╔════════════════════════════════════════════════════╗\n║      🚀 Linux Tech Diary by Abhi Ram 🚀           ║\n╚════════════════════════════════════════════════════╝\n\n👤 Name: Gottam\n🎓 Roll No: ECE123\n📅 Date: $(date '+%d %b %Y, %I:%M %p')\n" > profile.txt && \
echo -e "╔════════════════════════════════════╗\n║     🛠 Favorite Linux Commands 🛠     ║\n╚════════════════════════════════════╝\n1. ls    -> List files\n2. pwd   -> Show current directory\n3. cat   -> Read file contents\n4. nano  -> Edit files\n5. zip   -> Compress files\n" > commands.txt && \
echo -e "╔════════════════════════════════╗\n║       📜 Executed Command Log    ║\n╚════════════════════════════════╝\n$ mkdir linux_project_gottam\n$ cd linux_project_gottam\n$ touch profile.txt commands.txt log.txt\n$ echo 'Name: Gottam' > profile.txt\n$ cat profile.txt\n" > log.txt && \
cat profile.txt commands.txt log.txt > tech_diary.txt && \
echo -e "\n-----------------------------\n🎨 ASCII ART SIGNATURE\n-----------------------------\n$(toilet -F metal 'POTTAM')" >> tech_diary.txt && \
echo -e "\n╔════════════════════════════════════╗\n║        🌟 Motivational Quotes 🌟       ║\n╚════════════════════════════════════╝" >> tech_diary.txt && \
echo -e "\n┌────────────────────────────────────────────────────────────┐\n│ \"Craft your code like art, and your logs like legacy.\"      │\n└────────────────────────────────────────────────────────────┘" >> tech_diary.txt && \
zip linux_project_gottam.zip *.txt
